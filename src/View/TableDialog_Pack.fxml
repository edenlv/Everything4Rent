<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Pane prefHeight="600.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.TableDialog_Pack">
    <children>
      <VBox alignment="CENTER" prefHeight="450.0" prefWidth="1200.0">
         <children>
          <TableView fx:id="itemsTable" prefHeight="200.0" prefWidth="443.0">
              <columns>
                  <TableColumn fx:id="idColumn" prefWidth="51.0" text="ID" />
                  <TableColumn fx:id="productNameColumn" prefWidth="224.0" text="Package Name" />
                  <TableColumn fx:id="bTypeCol" prefWidth="155.0" text="Business Type" />
                  <TableColumn fx:id="descColumn" prefWidth="193.0" text="Description" />
                  <TableColumn fx:id="startDateCol" minWidth="0.0" prefWidth="157.0" text="Start Date" />
                  <TableColumn fx:id="endDateCol" prefWidth="145.0" text="End Date" />
                  <TableColumn fx:id="costCol" prefWidth="137.0" text="Total Cost" />
                  <TableColumn fx:id="ownerCol" prefWidth="133.0" text="Owner" />
              </columns>
          </TableView>
         </children>
      </VBox>
      <HBox alignment="CENTER" layoutX="25.0" layoutY="450.0" prefHeight="100.0" prefWidth="941.0">
         <children>
            <Label prefHeight="50.0" prefWidth="191.0" text="Enter Package ID:">
               <font>
                  <Font name="System Bold" size="22.0" />
               </font>
            </Label>
            <TextField fx:id="in_packID_loan" prefHeight="38.0" prefWidth="254.0" />
            <Button mnemonicParsing="false" onAction="#loanPackage" text="Loan Package!">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Button>
         </children>
      </HBox>
      <HBox alignment="CENTER" layoutX="24.0" layoutY="510.0" prefHeight="100.0" prefWidth="941.0">
         <children>
            <Label prefHeight="50.0" prefWidth="191.0" text="Enter Package ID:">
               <font>
                  <Font name="System Bold" size="22.0" />
               </font>
            </Label>
            <TextField fx:id="in_packID" prefHeight="38.0" prefWidth="254.0" />
            <Button mnemonicParsing="false" onAction="#viewAllProducts" text="View Package's Products">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Button>
         </children>
      </HBox>
      <HBox alignment="CENTER" layoutX="35.0" layoutY="390.0" prefHeight="100.0" prefWidth="941.0">
         <children>
            <Label prefHeight="50.0" prefWidth="191.0" text="Enter Package ID:">
               <font>
                  <Font name="System Bold" size="22.0" />
               </font>
            </Label>
            <TextField fx:id="in_packID_tradein" prefHeight="38.0" prefWidth="254.0" />
            <Button mnemonicParsing="false" onAction="#tradeinPackage" text="Trade-In Package!">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Button>
         </children>
      </HBox>
    </children>

</Pane>
