<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.UpdatePackage">
    <top>
        <!--<VBox alignment="BOTTOM_CENTER" prefHeight="70.0" prefWidth="400.0" BorderPane.alignment="CENTER">
            <Label prefHeight="41.0" prefWidth="184.0" text="Update Package" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
                <font>
                    <Font name="System Bold" size="24.0" />
                </font>
            </Label>
        </VBox>-->
        <VBox alignment="BOTTOM_CENTER" prefHeight="124.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1">
            <children>
                <Label text="Update Your Package">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
                <Label fx:id="lbl_prodNumber" alignment="CENTER" contentDisplay="CENTER" layoutX="191.0" layoutY="42.0" prefHeight="58.0" text="Package Number 5" textAlignment="CENTER" underline="true">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Label>
            </children>
        </VBox>

    </top>
    <center>
        <VBox alignment="TOP_CENTER" prefHeight="395.0" prefWidth="600.0" BorderPane.alignment="CENTER">
            <children>

                <HBox alignment="CENTER" prefHeight="37.0" prefWidth="360.0">
                    <children>
                        <Label prefHeight="40.0" prefWidth="200.0" text="Package Name:">
                            <font>
                                <Font size="18.0" />
                            </font></Label>
                        <TextField fx:id="in_packName" prefHeight="37.0" prefWidth="241.0" />
                    </children>
                </HBox>


                <HBox alignment="CENTER" layoutX="30.0" layoutY="30.0" prefHeight="37.0" prefWidth="360.0">
                    <children>
                        <Label prefHeight="40.0" prefWidth="200.0" text="Business Type:">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                        <ChoiceBox fx:id="cb_packBType" prefHeight="40.0" prefWidth="241.0">
                            <items>

                            </items>
                        </ChoiceBox>
                    </children>
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </HBox>

                <HBox alignment="CENTER" prefHeight="37.0" prefWidth="360.0">
                    <children>
                        <Label prefHeight="40.0" prefWidth="200.0" text="Start Date:">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                        <DatePicker fx:id="date_start" prefHeight="40.0" prefWidth="241.0" />
                    </children>
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </HBox>

                <HBox alignment="CENTER" prefHeight="37.0" prefWidth="360.0">
                    <children>
                        <Label prefHeight="40.0" prefWidth="200.0" text="End Date:">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                        <DatePicker fx:id="date_end" prefHeight="40.0" prefWidth="241.0" />
                    </children>
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </HBox>

                <HBox alignment="CENTER" prefHeight="37.0" prefWidth="360.0">
                    <children>
                        <Label prefHeight="40.0" prefWidth="200.0" text="Description:">
                            <font>
                                <Font size="18.0" />
                            </font></Label>
                        <TextField fx:id="in_desc" prefHeight="37.0" prefWidth="241.0" />
                    </children>
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </HBox>

            </children>
            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
            </padding>
        </VBox>
    </center>

    <bottom>
        
        <HBox alignment="TOP_CENTER" prefHeight="81.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1">
            <children>
                <Button alignment="CENTER" mnemonicParsing="false" onAction="#onUpdateProduct" prefHeight="37.0" prefWidth="200.0" style="-fx-background-color: green;" text="Submit Changes" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Button>
                <Button alignment="CENTER" layoutX="210.0" layoutY="10.0" mnemonicParsing="false" onAction="#onDeleteProduct" prefHeight="37.0" prefWidth="200.0" style="-fx-background-color: red;" text="Delete Package" textFill="#fffdfd">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                    <HBox.margin>
                        <Insets left="50.0" />
                    </HBox.margin>
                </Button>
            </children>
        </HBox>

    </bottom>

</BorderPane>
